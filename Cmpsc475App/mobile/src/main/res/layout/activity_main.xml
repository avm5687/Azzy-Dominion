<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azzy.cmpsc475app.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@android:color/black">


    <ImageButton
        android:id="@+id/P1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="111dp"
        app:layout_constraintBottom_toTopOf="@+id/P1Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/P2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/P2name"
        app:layout_constraintStart_toStartOf="@+id/P1button"
        app:layout_constraintTop_toBottomOf="@+id/P1Name"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/P1Name"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:shadowColor="#00ccff"
        android:shadowDx="1"

        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Mom"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/P2Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P1button" />

    <TextView
        android:id="@+id/P2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="30dp"
        android:shadowRadius="2"
        android:text="Dad"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/P2Button"
        app:layout_constraintTop_toBottomOf="@+id/P2Button" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_toast_container"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
